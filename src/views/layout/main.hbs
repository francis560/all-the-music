    <script>
        const search = document.getElementById('search');
        const busqueda = document.getElementById('busqueda');
        const contenedor = document.getElementById('contenedor');


        const pintar = (data) => {

            contenedor.innerHTML = '';

            const datos = data;
            
            for (i in datos) {

                contenedor.innerHTML += `

                    <div class="col-sm-6 mb-6"" >
                        <div class="card bg-primary shadow-soft border-light">
                          <div class="card-body">
                            <h5 class="card-title">${ datos[i].originalname }</h5>
                            <br>
                            <a href="/download/${ datos[i].originalname }" class="btn btn-primary mr-3 mb-3"><span class="mr-2"><i class="fa fa-download" aria-hidden="true"></i></span>Download</a>
                            <a href="${ datos[i].originalname }" target="_blank" id="play" target="_blank" class="btn btn-primary mb-3"><span class="mr-2"><i class="fa fa-play-circle-o" aria-hidden="true"></i></span>Play</a>
                          </div>
                        </div>
                    </div>

                `
            }
        }


        search.addEventListener('click',  async () => {
            const valor = await fetch('/search/' + busqueda.value);
            const valorFinal = await valor.json();
            pintar(valorFinal);
        });


    </script>
